<?xml version="1.0" encoding="utf-8"?>

		
<LinearLayout
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content" android:layout_width="wrap_content">
		
	
				
	<RelativeLayout
			android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true" 
			android:layout_width="fill_parent" android:paddingLeft="30px" android:paddingRight="30px" android:layout_marginTop="10px">

		
				
		<ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:textOff="rec" android:textOn="..." android:drawableLeft="@android:drawable/ic_btn_speak_now" android:id="@+id/voiceRec"></ToggleButton><Chronometer 
				android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
				android:textSize="20dip"
		        android:id="@+id/chrono" 
		        android:layout_centerHorizontal="true" 
		        android:layout_marginTop="10px"/>
			
		<Button 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="play" 
				android:layout_alignParentRight="true" 
				android:id="@+id/voicePlay" android:drawableRight="@drawable/playback_start"/>
		
	
</RelativeLayout>
			
	<RelativeLayout
			android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true" 
			android:layout_width="fill_parent" 
			android:paddingLeft="30px" 
			android:paddingRight="30px" android:layout_marginTop="30px">
			
			
		<Button android:layout_height="wrap_content" 
		android:id="@+id/voiceSave"
		android:layout_width="wrap_content" 
		android:layout_alignParentRight="true"
		android:width="100px"
		android:text="@string/btnOk"/>

		
		<Button android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:width="100px" 
		android:text="@string/btnCancel" 
		android:id="@+id/VoiceCancel"/>
		
	</RelativeLayout>


</LinearLayout>

