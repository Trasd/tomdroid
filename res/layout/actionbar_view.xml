<org.tomdroid.ui.Actionbar xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/dhistory_row" 
		android:layout_width="fill_parent" 
		android:layout_height="40dip"
		android:gravity="center_horizontal"
		android:orientation="horizontal"
		android:background="@drawable/actionbar_background"
		>
        <ImageView
            android:id="@+id/action_icon"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:scaleType="fitStart"
            android:padding="0dip"
            android:src="@drawable/actionbar_icon"
            android:clickable="true"
            />

        
        <!-- sync -->
        
        <ImageView
            android:id="@+id/sync"
            android:src="@drawable/icon_actionbar_sync_background"
            android:layout_alignParentRight="true"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:drawable/menuitem_background"
            android:gravity="center_horizontal"
            android:scaleType="center"
            />
        <ImageView
            android:id="@+id/syncIcon"
            android:src="@drawable/icon_actionbar_sync"
            android:layout_alignParentRight="true"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:scaleType="center"
            />
        <ImageView
            android:id="@+id/sync_dot"
            android:src="@drawable/icon_actionbar_dot"
            android:layout_alignParentRight="true"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:scaleType="center"
            android:visibility="invisible"
            />
        
        <!-- new buttons -->
        <ImageView
            android:id="@+id/edit"
            android:src="@drawable/icon_actionbar_sync_background"
            android:layout_toLeftOf="@id/sync"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:drawable/menuitem_background"
            android:gravity="center_horizontal"
            android:scaleType="center"
            />        
        <ImageView
            android:id="@+id/edit_top"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_toLeftOf="@id/sync"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:scaleType="center"
            />
        <ImageView
            android:id="@+id/delete"
            android:src="@drawable/icon_actionbar_sync_background"
            android:layout_toLeftOf="@id/edit"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:drawable/menuitem_background"
            android:gravity="center_horizontal"
            android:scaleType="center"
            />  
        
        <ImageView
            android:id="@+id/delete_top"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_toLeftOf="@id/edit"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:scaleType="center"
            />
</org.tomdroid.ui.Actionbar>