<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="10dip"
	>

	<TextView android:id="@+id/strURL" 
			  android:layout_width="fill_parent" 
			  android:layout_height="wrap_content" 
			  android:text="@string/strURL" 
			  />
			  
	<EditText android:id="@+id/txtURL"
		      android:singleLine="true"
		      android:nextFocusDown="@+id/btnOk"
			  android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_below="@+id/strURL"
		      />
		      
    <Button android:id="@+id/btnOk" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtURL"
            android:text="@string/btnOk"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10pt"
            />
	
    <Button android:id="@+id/btnCancel" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btnOk"
            android:layout_alignTop="@+id/btnOk"
            android:text="@string/btnCancel" 
            />
            
</RelativeLayout>